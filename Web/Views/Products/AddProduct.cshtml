@model MobileViewModel
<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <h2>Add Mobile</h2>
            <form>
                <div class="form-group">
                    <label asp-for="Brand">Brand</label>
                    <input type="text" class="form-control" id="Brand"asp-for="Brand">
                </div>
                <div class="form-group">
                    <label asp-for="Name">Name</label>
                    <input type="text" class="form-control" id="Name" asp-for="Name">
                </div>
                <div class="form-group">
                    <label asp-for="OS">OS</label>
                    <input type="text" class="form-control" id="OS"  asp-for="OS">
                </div>
                <div class="form-group">
                    <label asp-for="CPU">CPU</label>
                    <input type="text" class="form-control" id="CPU"  asp-for="CPU">
                </div>
                <div class="form-group">
                    <label asp-for="Size">Size</label>
                    <input type="text" class="form-control" id="Size"  asp-for="Size">
                </div>
                <div class="form-group">
                    <label asp-for="RAM">RAM</label>
                    <input type="text" class="form-control" id="RAM"  asp-for="RAM">
                </div>
                <div class="form-group">
                    <label asp-for="ScreenSize">Screen size</label>
                    <input type="text" class="form-control" id="ScreenSize" asp-for="ScreenSize">
                </div>
                <div class="form-group">
                    <label asp-for="ScreenResolution">Screen resolution</label>
                    <input type="text" class="form-control" id="ScreenResolution"  asp-for="ScreenResolution">
                </div>
                <div class="form-group">
                    <label asp-for="InternalMemory">Internal memory</label>
                    <input type="text" class="form-control" id="InternalMemory" asp-for="InternalMemory">
                </div>
                <div class="form-group">
                    <label asp-for="VideoUrl">VideoUrl</label>
                    <input type="text" class="form-control" id="VideoUrl" asp-for="VideoUrl">
                </div>
                <button type="submit" class="btn btn-success">Add Product</button>
            </form>
        </div>
    </div>
</div>